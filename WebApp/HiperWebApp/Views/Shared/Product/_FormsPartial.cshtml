@model Product

<div class="panel panel-default">
    <div class="panel-body">
        <div class="row">
            <div class="col-md">
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" type="text" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md">
                <div class="form-group">
                    <label asp-for="Value" class="control-label"></label>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text">R$</span>
                        </div>
                        <input asp-for="Value" type="number" min="0" step="0.1" class="form-control"/>
                    </div>
                    <span asp-validation-for="Value" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md">
                <div class="form-group">
                    <label asp-for="Quantity" class="control-label"></label>
                    <input asp-for="Quantity" type="number" min="0" step="1" class="form-control" pattern="^[0-9]$" />
                    <span asp-validation-for="Quantity" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md float-right">
                <footer class="form-group">
                    <button class="btn btn-success btn-sm">Salvar produto</button>
                </footer>
            </div>
        </div>
    </div>
</div>